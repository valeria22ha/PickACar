@{
    ViewBag.Title = "Home Page";

    string fechaAct = "" + DateTime.Now.Year + "-";
    if (DateTime.Now.Month.ToString().Length == 1)
    {
        fechaAct += "0" + DateTime.Now.Month;
    }
    else
    {
        fechaAct += DateTime.Now.Month;
    }
    if (DateTime.Now.Day.ToString().Length == 1)
    {
        fechaAct += "-0" + DateTime.Now.Day;
    }
    else
    {
        fechaAct += "-" + DateTime.Now.Day;
    }
}

<style>
</style>

<div style="position: absolute; width: 40%; height: 40%; left: 30%; top: 25%; background-color: rgba(0, 0, 0,0.6); border-radius: 10%;">
    <br />
    <h2 style="color:white; text-align:center;"> Renta el auto que necesites!</h2>
    @using (Html.BeginForm("VerDisponibles", "Vehiculo", FormMethod.Post))
    {
    <div style="position: absolute; left: 10%; top: 25%;">
        <h3 style="color:white; text-align:center; font-size: 30px;">Inicio</h3>
        <input type="date" class="form-control" id="fechaEntr" name="fechaEntr" min="@fechaAct">
    </div>
    <div style="position: absolute; left: 70%; top: 25%;">
        <h3 style="color:white; text-align:center; font-size: 30px;">Fin</h3>
        <input type="date" class="form-control" id="fechaDev" name="fechaDev" min="@fechaAct">
    </div>
    <div style="position: absolute; left: 40%; top: 65%;">
        <input type="submit" value="Buscar" style="border:0px; background-color: rgb(204,183,42); color:white;
                                                        font-size:30px; padding:15px 25px; border-radius:10px;" />
    </div>
    <br />
    }
</div>
